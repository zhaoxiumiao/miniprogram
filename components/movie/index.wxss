.container{
  display: flex;
  flex-direction: column;
  width: 200rpx;
}

.container__img{
  width: 100%;
  height: 270rpx;
  margin-bottom: 22rpx;
}

.container__title{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.container__rate{
  margin-top: 6rpx;
  width: 100%;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.container__score{
  /* margin-left: 20rpx; */
  font-size: 24rpx;
}