.banner{

}

.banner swiper{
  width: 100%;
  height: 460rpx;
}

.banner image{
  width: 100%;
  height: 460rpx;
}

.post{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.post__info{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  align-items: center;
}

.post__info__author{
  width: 60rpx;
  height: 60rpx;
  /* vertical-align: middle; */
}

.post__info__date{
  margin-left: 20rpx;
  font-size: 26rpx;
  /* vertical-align: middle; */
}

.post__title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post__image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post__content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  /* 间距 */
}

.post__like{
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}

.post__like__image{
  /* width: 32rpx;
  height: 32rpx; */
  margin-right: 16rpx;
}

.post__like__font{
  margin-right: 40rpx;
  font-size: 26rpx;
}